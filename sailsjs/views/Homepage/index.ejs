<div class="main container clearfix">
    <% if(req.session.flash && req.session.flash.info) { %>
    <div class="alert alert-info">
        <%= req.flash('info') %>
    </div>
    <% } %>
    <h1><%= devices.length %> connected devices</h1>

    <div class="getting-started">
        <% for(var i = 0; i < devices.length; i++) { %>
        <div class="clearfix">
            <div class="step" style="border-left: solid 2px #2980b9">
                <h3>
                    <span id="<%= devices[i] %>_status" class="status" title="Status unknown"></span>
                    <%= devices[i].toUpperCase() %>
                    <small>
                        Thermal sensor
                        (<a href="/device/<%= devices[i] %>">manage</a>)
                    </small>
                </h3>
                <p>
                    Data:
                    <span id="<%= devices[i] %>" style="font-size:25px">Loading&hellip;</span>
                </p>
                <p>
                    Connectable devices:
                    <% for(var j = 0; j < devices.length; j++) { %>
                    <% if(i != j) { %>
                    <a href="/connect/<%= devices[i] %>/<%= devices[j] %>"><%= devices[j] %></a>
                    <% } %>
                    <% } %>
                </p>
                <p>Connected devices:</p>
            </div>
        </div>
        <% } %>
    </div>
    <div class="links">
        <a href="/documentation">Documentation</a>
        <h4>Messages so far</h4>

        <div id="msg_count">Loading&hellip;</div>
    </div>
</div>
