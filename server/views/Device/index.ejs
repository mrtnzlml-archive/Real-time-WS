<div class="main container clearfix">
    <h1>
        <span id="<%= device_name %>_status" class="status" title="Status unknown"></span>
        <%= device_name.toUpperCase() %>
        <small>Thermal sensor</small>
    </h1>
    <div class="getting-started">
        <p>
            Data:
            <span id="<%= device_name %>" style="font-size:25px">Loading&hellip;</span>
        </p>
        <p>IP: <code><%= device_data.ip %>:<%= device_data.port %></code></p>
        <p>Message count: <%= device_data.msg_count %></p>
        <p>Last ping: <%= device_data.last_ping %></p>
        <p>Connectable devices:</p>
        <p>Connected devices:</p>

        <h2>
            Data convertor table
            <small style="color:green">Already applied</small>
        </h2>
<pre>
0     ->  1024
256   ->  768
512   ->  512
768   ->  256
1024  ->  0
</pre>

        <!--<div id="area" class="epoch category20c" style="height: 200px;"></div>-->
    </div>
    <div class="links">
        <h4>What would you like to do?</h4>
        <ul>
            <li>
                <a>Release from connections</a><br>
                Nobody will be able to send data to this device.
            </li>
            <li>
                <a>Drop all connections</a><br>
                This device will not be able to send data to another devices.
            </li>
        </ul>
    </div>
</div>
